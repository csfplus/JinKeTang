@model List<Teacher>

<form class="form-inline">
    <input name="gh" class="form-control" placeholder="请输入工号" />
    <input name="xm" class="form-control" placeholder="请输入姓名" />
    <button type="submit" class="btn btn-light btn-sm">查询</button>
</form>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">工号</th>
            <th scope="col">姓名</th>
            <th scope="col">性别</th>
            <th scope="col">密码</th>
            <th scope="col">操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.GH</td>
                <td>@item.XM</td>
                <td>@item.XB</td>
                <td>@item.MM</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="/Teacher/Edit/@item.Id">修改</a>
                    <button class="btn btn-sm btn-danger btn-del" data-id=@item.Id>删除</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts
{
<script>
    $(function(){
        $(".btn-del").click(function(){
            if(confirm("确定要删除吗？")){
                var id=$(this).data("id");
                $.post('/Teacher/Delete/'+id,function(data){
                    if(data.code==0){
                        alert("删除成功");
                        window.location.reload();
                    }else alert(data.msg);
                });
            }
        });
    });
</script>
}